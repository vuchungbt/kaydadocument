<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Forgot password</title>
        
        <%- include ('include/header') %>
    </head>
    <body class="masthead">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <%- include ('include/nav') %>
                    <div class="container p-5">
                        <div class="row justify-content-center">
                            <div class="col-lg-7">
                                <div class="card shadow-lg border-0 rounded-lg mt-5 bg-transparent">
                                    <div class="card-header">
                                        <h3 class="text-center font-weight-light my-4 text-white" >Forgot password</h3></div>
                                    <div class="card-body">
                                        <form>
                                            <div class="form-floating mb-3">
                                                <input class="form-control  bg-transparent text-white" id="inputEmail" type="email" placeholder="name@example.com" />
                                                <label for="inputEmail" class="text-white">Email address</label>
                                            </div>
                                            <div class="mt-4 mb-0">
                                                <div class="d-grid"><a class="btn btn-primary btn-block">Submit</a></div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <a href="/auth/login">Have an account? Go to login</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <%- include ('include/footer') %>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
    </body>
</html>
